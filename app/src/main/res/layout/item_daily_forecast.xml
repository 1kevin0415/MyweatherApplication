<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/item_weather_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/weather_icon_100" /> <TextView
    android:id="@+id/item_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintStart_toEndOf="@id/item_weather_icon"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="2025-05-23" /> <TextView
    android:id="@+id/item_condition"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    app:layout_constraintStart_toEndOf="@id/item_weather_icon"
    app:layout_constraintTop_toBottomOf="@id/item_date"
    tools:text="阴" /> <TextView
    android:id="@+id/item_temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="@android:color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="22° / 12°" /> </androidx.constraintlayout.widget.ConstraintLayout>